<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG" monitorInterval="10">
	<Properties>
		<Property name="HOST_INSTANCE"> $${hostName} -
			$${bundle:application:hztb.instance.name}
		</Property>
		<Property name="LOG_PATTERN"> %d %p %c{1.} [%t] [$${HOST_INSTANCE}] %m
			%ex%n</Property>
		<Property name="FAILURE_LOG_PATTERN">[$${HOST_INSTANCE}] %m %n</Property>
	</Properties>
	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout pattern="${LOG_PATTERN}" />
		</Console>

		<Console name="CONSOLE-WIRE-FILTER" target="SYSTEM_OUT">
			<PatternLayout pattern="${LOG_PATTERN}" />
		</Console>

		<Console name="CONSOLE-MSG-ONLY" target="SYSTEM_OUT">
			<PatternLayout pattern="${FAILURE_LOG_PATTERN}" />
		</Console>

		<!-- Async Loggers will auto-flush in batches, so switch off immediateFlush -->
		<RollingFile name="ROLLING-WIRE-FILTER" fileName="build/logs/service-manager.log"
			filePattern="build/logs/service-manager-%d{yyyy-MM-dd}.%i.log">
			<PatternLayout>
				<Pattern>${LOG_PATTERN}</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggerPolicy />
				<SizeBasedTriggerPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />

		</RollingFile>

		<!-- Async Loggers will auto-flush in batches, so switch off immediateFlush -->
		<RollingFile name="ROLLING" fileName="build/logs/service-manager.log"
			filePattern="build/logs/service-manager-%d{yyyy-MM-dd}.%i.log">
			<PatternLayout>
				<Pattern>${LOG_PATTERN}</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggerPolicy />
				<SizeBasedTriggerPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />

		</RollingFile>

		<!-- Async Loggers will auto-flush in batches, so switch off immediateFlush -->
		<RollingFile name="STACKTRACES" fileName="build/logs/stacktraces.log"
			filePattern="build/logs/stacktraces-%d{yyyy-MM-dd}.%i.log">
			<PatternLayout>
				<Pattern>${LOG_PATTERN}</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggerPolicy />
				<SizeBasedTriggerPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />

		</RollingFile>


		<!-- Async Loggers will auto-flush in batches, so switch off immediateFlush -->
		<RollingFile name="PERFORMANCE" fileName="build/logs/performance.log"
			filePattern="build/logs/performance-%d{yyyy-MM-dd}.%i.log">
			<PatternLayout>
				<Pattern>${LOG_PATTERN}</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggerPolicy />
				<SizeBasedTriggerPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />

		</RollingFile>


		<!-- Async Loggers will auto-flush in batches, so switch off immediateFlush -->
		<RollingFile name="SECURITY" fileName="build/logs/security.log"
			filePattern="build/logs/security-%d{yyyy-MM-dd}.%i.log">
			<PatternLayout>
				<Pattern>${LOG_PATTERN}</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggerPolicy />
				<SizeBasedTriggerPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />

		</RollingFile>

		<!-- Async Loggers will auto-flush in batches, so switch off immediateFlush -->
		<RollingFile name="CALLOUT" fileName="build/logs/callout.log"
			filePattern="build/logs/callout-%d{yyyy-MM-dd}.%i.log">
			<PatternLayout>
				<Pattern>${LOG_PATTERN}</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggerPolicy />
				<SizeBasedTriggerPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />

		</RollingFile>


		<!-- Async Loggers will auto-flush in batches, so switch off immediateFlush -->
		<RollingFile name="FAILURE" fileName="build/logs/failures.log"
			filePattern="build/logs/failures-%d{yyyy-MM-dd}.%i.log">
			<PatternLayout>
				<Pattern>${FAILURE_LOG_PATTERN}</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggerPolicy />
				<SizeBasedTriggerPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />

		</RollingFile>

	</Appenders>
	<Loggers>
		<Root level="error" includeLocation="true">
			<AppenderRef ref="CONSOLE" />
			<AppenderRef ref="ROLLING" />
		</Root>
		<Logger name="org.apache.http.wire" level="debug" additivity="false">
			<AppenderRef ref="CONSOLE-WIRE-FILTER" />
			<AppenderRef ref="ROLLING-WIRE-FILTER" />
		</Logger>

		<Logger name="org.apache.http" level="error" />
		<Logger name="com.svs.hztb" level="debug" />
		<Logger name="org.springframework" level="info" />

		<Logger name="performance" level="debug" additivity="false">
			<AppenderRef ref="PERFORMANCE" />
		</Logger>

		<Logger name="security" level="debug" additivity="false">
			<AppenderRef ref="SECURITY" />
		</Logger>


		<Logger name="callout" level="debug" additivity="false">
			<AppenderRef ref="CONSOLE" />
			<AppenderRef ref="ROLLING" />
			<AppenderRef ref="CALLOUT" />
		</Logger>


		<Logger name="failures" level="info" additivity="false">
			<AppenderRef ref="CONSOLE-MSG-ONLY" />
			<AppenderRef ref="FAILURE" />
		</Logger>
		<Logger name="stacktraces" level="debug" additivity="false">
			<AppenderRef ref="STACKTRACES" />
		</Logger>

	</Loggers>
</Configuration>
